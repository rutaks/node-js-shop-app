<%- include('../includes/header.ejs') %>

<body>
    <%- include('../includes/navbar.ejs') %>
    <br>

    <div class="container">
        <center>
            <div class="row">
                <% if(typeof product != 'undefined'){%>
                <div class="col-lg-12">
                    <div class="card mb-3">
                        <h3 class="card-header"><%= product.title %></h3>
                        <img class="col-lg-4" style="height: 200px; width: 100%; display: block;"
                            src="<%= product.imageUrl %>" alt="Card image">
                        <div class="card-body">
                            <h5 class="card-text"><%= product.description %></h5>
                            <div class="row">
                                <a href="/products/<%= product.id %>" class="btn col-lg-5 btn-primary">Details</a>
                                <form action="/add-to-cart" class="col-lg-6" method="POST">
                                    <button type="submit" class="btn btn-block btn-success">Add To Cart</button>
                                </form>
                            </div>
                            <br>
                            <div class="card-footer text-muted">
                                2 days ago
                            </div>
                        </div>
                    </div>
                </div>
                <%}else{%>
                <h1>No Product Found</h1>
                <%}%>
                    </div>
        </center>
    </div>

</body>
<%- include('../includes/footer.ejs') %>