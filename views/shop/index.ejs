<%- include('../includes/header.ejs') %>

<body>
    <%- include('../includes/navbar.ejs') %>
    <br>

    <div class="container">
        <div class="row">
            <% if(products.length > 0){%>
            <% for(let product of products){ %>
            <div class="col-lg-4">
                <div class="card mb-3">
                    <h3 class="card-header"><%= product.title %></h3>
                    <center><img style="height: 200px; width: 50%; display: block;" src="<%= product.imgUrl %>" alt="Card image"></center>
                    <div class="card-body">
                        <p class="card-text"><%= product.description %></p>
                        <div class="row">
                            <a href="/products/<%= product.id %>" class="btn col-lg-5 btn-primary">Details</a>
                            <form action="/cart" class="col-lg-6" method="POST">
                                <input type="hidden" name="productId" value="<%= product.id %>">
                                <button type="submit" class="btn btn-block btn-success">Add To Cart</button>
                            </form>
                        </div>
                        <br>
                        <div class="card-footer text-muted">
                            2 days ago
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
            <%}else{%>
            <h1>No Product Found</h1>
            <%}%>
        </div>
    </div>

</body>
<%- include('../includes/footer.ejs') %>