<%- include('../includes/header.ejs') %>

<body>
    <%- include('../includes/navbar.ejs') %>
    <br>

    <div class="container">
        <table id="table" style="width:100%" class="table table-hover">
            <thead>
                <tr>
                <th scope="col">Item</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                        
            <% if(products.length > 0){%>
            <% for(let product of products){ %>
                <tr>
                    <td><%= product.title %></td>
                    <td><img style="height: 50px; width: 50px; display: block;" src="<%= product.imgUrl %>"</td>
                    <td><%= product.price %></td>
                    <td><%= product.description %></td>
                    <td>
                        <div class="row">
                            <a href="/admin/edit-product/<%= product.id %>" class="btn col-lg-3 btn-warning">Edit</a>
                            <form action="/admin/delete-product" class="col-lg-4" method="POST">
                                <input type="hidden" name="id" id="inputid" class="form-control"
                                    value="<%= product.id %>">
                                <button type="submit" class="btn btn-block btn-danger">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            <% } %>
            <%}else{%>
            <h1>No Product Found</h1>
            <%}%>
    </div>

    <script>
        $(document).ready( function () {
            $('#table').DataTable({
                paging: false,
                scrollY: 400
            });
        } );
    </script>
</body>
<%- include('../includes/footer.ejs') %>