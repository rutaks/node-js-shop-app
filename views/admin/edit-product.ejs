<%- include('../includes/header.ejs') %>

<body>
    <%- include('../includes/navbar.ejs') %>
    <div class="container">
        <br>
        <a href="/admin/add-product">dfsa</a>
        <div class="jumbotron">
            <form action="/admin/edit-product" method="POST">
                <legend>Add Item</legend>
                <div class="form-group">
                    <label for="title">Item</label>
                    <input type="text" name="title" class="form-control" id="title" placeholder="Enter Item Title"
                        value="<%= product.title %>">

                    <input type="hidden" name="id" id="inputid" class="form-control" value="<%= product.id %>">

                </div>
                <div class="form-group">
                    <label for="title">Image URL</label>
                    <input type="text" name="imgUrl" class="form-control" id="imgUrl" placeholder="Enter Item Image"
                        value="<%= product.imageUrl %>">
                </div>
                <div class="form-group">
                    <label for="title">Price</label>
                    <input type="text" name="price" class="form-control" id="price" placeholder="Enter Item Price"
                        value="<%= product.price %>">
                </div>
                <div class="form-group">
                    <label for="title">Description</label>
                    <input type="text" name="description" class="form-control" id="description"
                        placeholder="Enter Item Description" value="<%= product.description %>">
                </div>
                <button type="submit" class="btn btn-block btn-warning">Update</button>
            </form>
        </div>

    </div>
</body>
<%- include('../includes/footer.ejs') %>